연도 윤년 판단 코드

#include <stdio.h>

int main(void)
{
    int year;

    printf("연도를 입력하시오: ");
    scanf("%d",&year);

    if(year % 4 == 0){
        if(year % 100 != 0 || year % 400 == 0){
            printf("result = ture");
        }
        else{
            printf("result = false");
            }
    
    }
    return 0;
}

원화 환율화 코드

#include <stdio.h>

int main(void)
{
    double rate;
    double usd;
    int krw;

    printf("환율을 입력하시오: ");
    scanf("%lf",&rate);
    printf("원화 금액을 입력하시오: ");
    scanf("%d",&krw);

    usd = krw / rate;

    printf("원화 %d원은 %f달러입니다.",krw,usd);

    return 0;
}

비트 연산 10진수 -> 2진수 코드 공부

(answer)

#include<stdio.h>
int main(void)
{
unsigned int num;
printf("10진수: ");
scanf("%u", &num);
unsigned int mask = 1 << 7; // mask = 10000000
printf("2진수: ");
((num & mask) == 0) ? printf("0") : printf("1");
mask = mask >> 1;// 오른쪽으로 1비트 이동한다.
((num & mask) == 0) ? printf("0") : printf("1");
mask = mask >> 1;// 오른쪽으로 1비트 이동한다.
((num & mask) == 0) ? printf("0") : printf("1");
mask = mask >> 1;// 오른쪽으로 1비트 이동한다.
((num & mask) == 0) ? printf("0") : printf("1");
mask = mask >> 1;
((num & mask) == 0) ? printf("0") : printf("1");
mask = mask >> 1;
((num & mask) == 0) ? printf("0") : printf("1");
mask = mask >> 1;
((num & mask) == 0) ? printf("0") : printf("1");
mask = mask >> 1;
((num & mask) == 0) ? printf("0") : printf("1");
printf("\n");
return 0;
}

성적 평균 계산 코드


#include <stdio.h>

int main(void)
{
    int grate;
    double avg;
    int sum,n;

    printf("종료하려면 음수를 입력하시오");

    while(1){
        printf("성적을 입력하시오: ");
        scanf("%d",&grate);
        if(grate < 0) break;
        sum += grate;
        n++;
    }

    n--;
    

    avg = sum / n;

    print("성적의 평균은 %lf입니다.",avg);

    return 0;
}
